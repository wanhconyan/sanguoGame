package com.sevenCool.util
{
	
	/**
	 * 定义了一些颜色的数值 
	 * @author Administrator
	 * 
	 */	
	public class Colors{
		
		public static const RED:uint = 0xFF0000;

		public static const GREEN:uint = 0x00FF00;
		
		public static const BLUE:uint = 0x0000FF;

		public static const YELLOW:uint = 0xFFFF00;

		public static const ORANGE:uint = 0xFF9900;

		public static const PINK:uint = 0xFF66FF;

		public static const COFFEE:uint = 0x672134;

		public static const GRAY:uint = 0x717171;
		
		public static const GREEN_MARSH:uint = 0x2E402C;
		
		public static const WALL:uint = 0x8B6A21;
		
		public static const GATE_DEFEND:uint = 0x872EA4;

		public static const INNER_GATE :uint = 0x5F6012;
		
		/**
		 *不可行走 
		 */		
		public static const UN_WALKABLE:uint = 0x000000;
		
		/**
		 *可行走 代表平路草地
		 */		
		public static const PLAN_ROAD:uint = 0x017804 ;
		
		/**
		 * 山地 林地
		 */		
		public static const HILL_ROAD:uint =0xa1811f ;
		
		/**
		 *水路
		 */		
		public static const WATER_ROAD:uint = 0x06b9ed;
	}
}
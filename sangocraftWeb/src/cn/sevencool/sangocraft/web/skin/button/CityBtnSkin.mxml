<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="21" minHeight="21"
				   alpha.disabled="0.5"
				   width="71" height="73">
     
    <fx:Metadata>
       
        [HostComponent("spark.components.Button")]
      
    </fx:Metadata>
          
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<s:BitmapImage width="51" height="53" horizontalCenter="0" smooth="true"
				   source="@Embed('../../../../../../../assets/images/button/battleCombat/cityButton.png')"
				   verticalCenter="0"
				   horizontalCenter.down="2" verticalCenter.down="2"/>
	<s:BitmapImage includeIn="over" x="0" y="2" smooth="true"
				   source="@Embed('../../../../../../../assets/images/button/battleCombat/citySelect.png')"/>
	<s:BitmapImage includeIn="down" x="1" y="1" width="71" height="73" smooth="true"
				   source="@Embed('../../../../../../../assets/images/button/battleCombat/citySelect.png')"/>
	<!-- layer 1: shadow -->
</s:SparkButtonSkin>
